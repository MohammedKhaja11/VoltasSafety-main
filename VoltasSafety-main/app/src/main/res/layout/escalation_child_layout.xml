        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin10dp"
            android:orientation="horizontal"
            android:padding="3dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/outTimeAssignText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin20dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/tv_count"
                android:layout_weight="0.9"
                android:gravity="left"
                android:text="Out Time Assigned"
                android:textColor="@color/assigned_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/outTimeAssignData"
                android:layout_width="0dp"
                android:layout_height="23dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_weight="0.08"
                android:background="@drawable/assign_count_shape"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="2dp"
        android:backgroundTint="#F0F0F0"
