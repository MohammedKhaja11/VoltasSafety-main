<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="@dimen/margin10dp"
    android:layout_marginTop="@dimen/margin50dp"
    android:layout_marginRight="@dimen/margin10dp"
    android:background="@drawable/card_bordershape_white"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin10dp"
        android:theme="@style/Dialog">

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890,&amp;@ \n ._"
            android:hint="Enter E-Mail ID"
            android:imeOptions="actionNext"
            android:inputType="textNoSuggestions"
            android:paddingTop="@dimen/margin5dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/darker_gray" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin10dp"
        android:layout_marginTop="@dimen/margin10dp"
        android:theme="@style/Dialog"
        android:visibility="gone">

        <EditText
            android:id="@+id/edit_otp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:digits="1234567890"
            android:hint="Enter OTP"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="4"
            android:paddingTop="@dimen/margin5dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/darker_gray" />
    </com.google.android.material.textfield.TextInputLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="@dimen/margin10dp"
        android:layout_marginTop="@dimen/margin10dp"
        android:weightSum="1">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".2"></Space>

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".25"
            android:background="@drawable/card_bordershape"
            android:gravity="center"
            android:padding="@dimen/margin10dp"
            android:text="@string/cancel"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".2"
            android:gravity="center"
            android:padding="@dimen/margin10dp"
            android:text="WELCOME GUEST USER"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".25"
            android:background="@drawable/card_bordershape"
            android:gravity="center"
            android:padding="@dimen/margin10dp"
            android:text="Send"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".2"
            android:background="@drawable/card_bordershape"
            android:gravity="center"
            android:padding="@dimen/margin10dp"
            android:text="Login"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".2"></Space>

    </TableRow>

</LinearLayout>