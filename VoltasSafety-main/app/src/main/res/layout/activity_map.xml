<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GoogleMapActivity" />

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="right"
        android:layout_margin="@dimen/margin5dp"
        android:background="@drawable/map_boader"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TableRow
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5dp"
            android:weightSum="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:src="@drawable/open_marker"
                android:textColor="#1CC861"
                android:textSize="@dimen/text_16sp" />

            <TextView
                android:id="@+id/openText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Open"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_16sp"
                android:textStyle="bold" />


        </TableRow>

        <TableRow
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5dp"
            android:weightSum="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="0.2"
                android:src="@drawable/assigne_marker"
                android:textColor="#1CC861"
                android:textSize="@dimen/text_16sp" />

            <TextView
                android:id="@+id/assignText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Assigned"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_16sp"
                android:textStyle="bold" />


        </TableRow>

        <TableRow
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin5dp"
            android:weightSum="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:src="@drawable/close_marker"
                android:textColor="#1CC861"
                android:textSize="@dimen/text_16sp" />

            <TextView
                android:id="@+id/closeText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Closed"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/text_16sp"
                android:textStyle="bold" />

        </TableRow>
    </LinearLayout>


</FrameLayout>
